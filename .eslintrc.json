{
	"env": {
		"browser": true,
		"es2021": true
	},
	"overrides": [],
	"extends": ["eslint:recommended", "plugin:react/recommended", "plugin:react/jsx-runtime"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react", "simple-import-sort"],
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"simple-import-sort/imports": [
			"error",
			{
				"groups": [["^react"], ["^redux"], ["^styled"], ["^@?\\w"], ["@/(.*)"]]
			}
		]
	}
}
